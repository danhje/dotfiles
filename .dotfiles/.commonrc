export PATH=~/.local/bin:~/.poetry/bin:$PATH
export MCFLY_RESULTS=50
export MCFLY_FUZZY=true

# Meta
alias updot="source <(curl -fsSL https://raw.githubusercontent.com/danhje/dotfiles/main/install.sh)"

# cd
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../'
alias .......='cd ../../../../'
alias .2='cd ../../../../'
alias .3='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
alias .6='cd ../../../../..'
alias .7='cd ../../../../..'

# git
alias gd="git diff"
alias ga="git add"
alias gb="git branch -a"
alias gs="git status"
alias gc="git commit"
alias gl="git log"
alias glo="git log --oneline --graph"
alias gp="git push"
alias gamendall="git add . && git commit --amend --no-edit"
alias gforce="git push --force-with-lease"

# poetry
alias poetry-upgrade='poetry show | cut -d ' ' -f 1 | xargs -i poetry remove {} && poetry add {}'
alias pru="poetry run"
alias psh="poetry shell"
alias pad="poetry add"

# other
alias init="git init && pre-commit install && poetry install && poetry shell"
alias pre="pre-commit install && pre-commit run --all-files"
alias re-source='. ~/.zshrc 2>/dev/null ; . ~/.bashrc 2>/dev/null'
alias p='sb pycharm .'
alias lk="exa -lhar -s modified"
alias c="clear"
alias grep="grep --color=auto"


function wget0() {
    rest=$*
    if [ -z "$rest" ]
    then
        rest="8000/data"
    fi
    wget -qO- http://0.0.0.0:$rest
}


function sb() {
    # Starts a process in the background, suppressing any stdout / stderr output.
    $* >/dev/null 2>&1 &
}

# Source local rc. Should remain at the bottom.
if test -f ~/.localrc; then
    . ~/.localrc
fi
